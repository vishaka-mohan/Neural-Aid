<!DOCTYPE html>
<html>

<head>
  <link rel="stylesheet" href="/stylesheets/app.css">
  <link rel="preconnect" href="https://fonts.gstatic.com">
  <!--Fonts-->
  <link href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap" rel="stylesheet">
  <!--Font Awesome-->
  <script src="https://kit.fontawesome.com/3808de5cb1.js" crossorigin="anonymous"></script>

  <title>Landing</title>

</head>

<body>
  <div class="header">
    <a href="/home">
      <img src="/img/back.png" alt="">
    </a>
    <h3>News</h3>
    <a href="news/configure" class="settings">
      <i class="fas fa-cog fa-6x"></i>
    </a>


  </div>
  <div class="container news-container">
  
  <% function getTime(dateString){
        let d = new Date(dateString);
        let date = d.getDate();
        let month = d.getMonth()+1;
        let year = d.getFullYear();
        
        return(date + "/" + month + "/" + year);
    } %>

    <% for(let article of news.articles){%>
      <div class="news">
        <div class="news-card">
          <div class="news-text">
            <h3 id=<%="headingOne"+article.title%>>
              <%=article.title%>
            </h3>
            <p class="time"><%= getTime(article.publishedAt) %></p>
          </div>
          <img src="<%=article.urlToImage%>" alt="" class="news-pic">
        </div>
        <div class="desc hide">
        
          <p class="description">
            <%=article.description%>
            <a href=<%=article.url%> target="_blank">Read the full story here!</a>
          </p>
        </div>
        <div class="chevron">
          <i class="fas fa-chevron-down fa-5x"></i>
        </div>
       
      </div>
      
    <%}%>

  </div>
  <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>

  <script src="js/news.js"> </script>
</body>
</html>
